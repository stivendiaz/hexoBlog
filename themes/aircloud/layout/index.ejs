---
layout: layout
---
<div id="accordion" role="tablist" aria-multiselectable="true">
        <% page.posts.each(function(post){ %>
        <div class="card">
          <div role="tab" id="headingOne">
            <div class="card-header">
              <div class="card-date">
                  <i class="card-action crd far fa-file-alt" aria-hidden="true"></i>
                  <p class="date">2019-01-04</p>
              </div>
              <div class="card-header-content">
              <a href="<%- config.root %><%- post.path %>" class=" collapsed">
                  <h3 class="card-title"><%- (post.title || "Untitled").replace(/[<>&"]/g,function(c){
                    return {'<':'&lt;','>':'&gt;','&':'&amp;','"':'&quot;'}[c];
                }) %></h3>
  
              </a>
                <% if (post.tags.length){
                    console.log(post.tags)
                %>
                <% post.tags.forEach(function(tag){ %>
                    <a class="card-author" href="<%= config.root %>tags/#<%= tag.name %>" title="<%= tag.name %>">#<%= tag.name %></a>
                <% }) %>
                <% } %>
            </div>
              <div class="card-actions">
                <a href="<%- config.root %><%- post.path %>" class="card-action">
                  <i class="fa fa-angle-right" aria-hidden="true"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>


<ul class="pager">
    <% if (page.prev){ %>
    <li class="previous">
        <a href="<%- config.root %><%- page.prev_link %>">&larr; Newer Posts</a>
    </li>
    <% } %>
    <% if (page.next){ %>
    <li class="next">
        <a href="<%- config.root %><%- page.next_link %>">Older Posts &rarr;</a>
    </li>
    <% } %>
</ul>
